{
  "private": true,
  "scripts": {
    "preinstall": "pnpm dlx only-allow pnpm",
    "build": "pnpm run --sequential '/^build:.*/'",
    "build:wasm": "wasm-pack build --release -t bundler",
    "build:web": "vite build",
    "check": "pnpm run '/^check:.*/'",
    "check:wasm": "cargo clippy --all-targets --all-features",
    "check:web": "tsc",
    "start": "vite serve --open",
    "preview": "vite preview --open",
    "lint": "pnpm run '/^lint:.*/'",
    "lint:wasm": "cargo fmt --all --check",
    "lint:web": "biome check --write www",
    "test": "wasm-pack test --headless --chrome",
    "ncu": "npm-check-updates -u"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.4",
    "@commitlint/cli": "19.8.1",
    "@commitlint/config-conventional": "19.8.1",
    "@types/node": "24.3.1",
    "@types/react": "19.1.12",
    "@types/react-dom": "19.1.9",
    "@vitejs/plugin-react-swc": "4.0.1",
    "lefthook": "1.13.0",
    "npm-check-updates": "18.1.1",
    "react": "19.1.1",
    "react-dom": "19.1.1",
    "terser": "5.44.0",
    "typescript": "5.9.2",
    "vite": "7.1.5",
    "vite-plugin-wasm": "3.5.0",
    "vite-tsconfig-paths": "5.1.4"
  },
  "packageManager": "pnpm@10.13.1",
  "engines": {
    "node": ">=20.x",
    "npm": "use pnpm",
    "pnpm": ">=9.x",
    "yarn": "use pnpm"
  }
}
