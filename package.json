{
  "private": true,
  "scripts": {
    "preinstall": "pnpm dlx only-allow pnpm",
    "build": "pnpm run --sequential '/^build:.*/'",
    "build:wasm": "wasm-pack build --release -t bundler",
    "build:web": "pnpm -C ./www run build",
    "check": "pnpm -C ./www run check",
    "start": "vite serve ./dist --open",
    "lint": "biome check --write www",
    "test": "wasm-pack test --headless --chrome",
    "ncu": "npm-check-updates --workspaces -u"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.2",
    "@types/node": "22.7.2",
    "npm-check-updates": "17.1.3",
    "terser": "5.33.0",
    "typescript": "5.6.2",
    "vite": "5.4.8",
    "vite-plugin-top-level-await": "1.4.4",
    "vite-plugin-wasm": "3.3.0",
    "vite-tsconfig-paths": "5.0.1"
  },
  "packageManager": "pnpm@9.11.0",
  "engines": {
    "node": ">=20",
    "pnpm": ">=9"
  }
}
