{
  "private": true,
  "scripts": {
    "preinstall": "pnpm dlx only-allow pnpm",
    "build": "pnpm run --sequential '/^build:.*/'",
    "build:wasm": "wasm-pack build --release -t bundler",
    "build:web": "vite build",
    "check": "pnpm run '/^check:.*/'",
    "check:wasm": "cargo clippy --all-targets --all-features",
    "check:web": "tsc",
    "start": "vite serve --open",
    "preview": "vite preview --open",
    "lint": "pnpm run '/^lint:.*/'",
    "lint:wasm": "cargo fmt --all --check",
    "lint:web": "biome check --write www",
    "test": "wasm-pack test --headless --chrome",
    "ncu": "npm-check-updates -u"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.13",
    "@commitlint/cli": "20.4.0",
    "@commitlint/config-conventional": "20.4.0",
    "@types/node": "25.1.0",
    "@types/react": "19.2.10",
    "@types/react-dom": "19.2.3",
    "@vitejs/plugin-react-swc": "4.2.2",
    "lefthook": "2.0.16",
    "npm-check-updates": "19.3.2",
    "react": "19.2.4",
    "react-dom": "19.2.4",
    "terser": "5.46.0",
    "typescript": "5.9.3",
    "vite": "7.3.1",
    "vite-plugin-wasm": "3.5.0",
    "vite-tsconfig-paths": "6.0.5"
  },
  "pnpm": {
    "ignoredBuiltDependencies": ["@swc/core", "esbuild"],
    "onlyBuiltDependencies": ["lefthook"]
  }
}
